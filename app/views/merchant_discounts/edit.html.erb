<%= form_with model: [@merchant, @discount], url: merchant_discount_path(@merchant, @discount), method: :patch, local: true do |form| %>
  <%= form.label :name %>
  <%= form.text_field :name %>
  <%= form.label :quantity_threshold %>
  <%= form.text_field :quantity_threshold %>
  <%= form.label :percentage_discount %>
  <%= form.text_field :percentage_discount %>

  <%= form.submit "Update #{@discount.name}" %>
<% end %>
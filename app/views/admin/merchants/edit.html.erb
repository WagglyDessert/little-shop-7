<body>
<div class="admin_header">Little Esty Shop</div><br>
<div class ="nav_button"><%= link_to "Invoices", admin_invoices_path %> </div>
<div class ="current_button">Merchants</div>
<div class ="nav_button"><%= link_to "Dashboard", admin_path %> </div>
<h3>Admin Dashboard</h3>

<h3><u><%= "Edit #{@merchant.name}'s name" %></u><h3>
<%= form_with url: "/admin/merchants/#{@merchant.id}", method: :patch, local: :true do |m| %>
  <%= m.label :new_name %>
  <%= m.text_field :new_name, value: "#{@merchant.name}" %>
  <%= m.submit "Submit" %>
<% end %>
<h1>All Merchants</h1>

<% @merchants.each do |merchant| %>
  <%= link_to merchant.name, "/admin/merchants/#{merchant.id}" %> <br>
  <div class= "button">
  <% if merchant.enabled == true %>
    <%= link_to merchant.name, "/admin/merchants/#{merchant.id}" %> 
    <%= button_to "Disable", url: "admin/merchants", method: :patch %>
  <% end %>
  </div>
<% end %>

<h2>Disabled Merchants</h2>
<% @merchants.each do |merchant| %>
  <div class= "button">
  <% if merchant.enabled == false %>
    <%= link_to merchant.name, "/admin/merchants/#{merchant.id}" %>
    <%= button_to "Enable", url: "/admin/merchants", method: :patch %>
  <% end %>
  </div>
<% end %>

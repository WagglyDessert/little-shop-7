<h3> Little Esty Shop</h3>
<h3> Name: <%= @merchant.name %></h3>
<%= link_to "Merchant Items", "/merchants/#{@merchant.id}/items" %>
<%= link_to "Merchant Invoices", "/merchants/#{@merchant.id}/invoices" %>

<section id="Items-Ready-to-Ship">
<h3> Items Ready to Ship</h3>
<% @merchant.items_ready_to_ship_ordered_oldest_to_newest.each do |item| %>
      <p>Name: <%= item[:name] %> - Invoice ID: <%= link_to item[:invoice_id], "/merchants/#{@merchant.id}/invoices/#{item[:invoice_id]}" %> - Date: <%= item[:date] %></p>
  <% end %>
</section>
